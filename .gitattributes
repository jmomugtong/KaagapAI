# Auto detect text files and perform LF normalization
* text=auto eol=lf

# Python files - always LF
*.py text eol=lf
*.pyi text eol=lf

# Configuration files
*.toml text eol=lf
*.yaml text eol=lf
*.yml text eol=lf
*.json text eol=lf
*.ini text eol=lf
*.cfg text eol=lf

# Shell scripts
*.sh text eol=lf
*.bash text eol=lf

# Documentation
*.md text eol=lf
*.rst text eol=lf
*.txt text eol=lf

# SQL
*.sql text eol=lf

# Docker
Dockerfile text eol=lf
docker-compose*.yml text eol=lf

# Requirements
requirements*.txt text eol=lf

# Git
.gitignore text eol=lf
.gitattributes text eol=lf

# Binary files (keep as-is)
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.pdf binary
*.woff binary
*.woff2 binary
*.ttf binary
*.eot binary
